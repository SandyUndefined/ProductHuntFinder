{
  "name": "product-hunt-finder",
  "version": "1.0.0",
  "description": "Serverless-friendly web app that processes Product Hunt RSS feeds by category",
  "main": "server/app.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/app.js",
    "client:dev": "cd client && npm start",
    "start": "node server/app.js",
    "build": "cd client && npm run build",
    "install:client": "cd client && npm install",
    "postinstall": "npm run install:client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "product-hunt",
    "rss",
    "nodejs",
    "express",
    "react",
    "replit"
  ],
  "author": "ProductHuntFinder",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "rss-parser": "^3.13.0",
    "uuid": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
